                      <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="100.0" prefWidth="160.0" />
                        <Button fx:id="buttonMerge" layoutX="249.0" layoutY="424.0" mnemonicParsing="false" onAction="#handleButtonMergeClick" text="Merge" />
