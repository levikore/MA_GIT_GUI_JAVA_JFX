                                                <TextArea fx:id="textAreaCommitComment" layoutX="55.0" layoutY="39.0" prefHeight="138.0" prefWidth="602.0" promptText="&lt;Commit Comment&gt;" />
                                                <Button fx:id="buttonCommit" layoutX="636.0" layoutY="198.0" mnemonicParsing="false" onAction="#handelCommit" text="Commit" />
                                             </children>
                                          </AnchorPane>
                                      </items>
                                    </SplitPane>
                                 </children>
                              </AnchorPane>
                          </items>
                        </SplitPane>
                     </children>
                  </AnchorPane>
            </content>
          </Tab>
          <Tab fx:id="tabBranch" text="Branch">
            <content>
              <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                     <children>
                        <ListView fx:id="listViewBranchList" layoutX="10.0" layoutY="33.0" prefHeight="377.0" prefWidth="920.0" />
                        <Button fx:id="buttonDeleteBranch" layoutX="936.0" layoutY="35.0" mnemonicParsing="false" onAction="#handleRemoveBranchClick" text="Delete" />
